<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Index page</title>
</head>
<body class=" bg-secondary">

<%= render "dolists/navbar" %>
<div class="container-sm mt-5 border border-primary border-2 rounded-3 bg-dark text-center">
<h2 class="text-light mt-2 ">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "text-light mb-3" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-primary border-3 border-rounded rounded-3" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-light mb-3 mt-3" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "border border-primary border-3 border-rounded rounded-3" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'text-light mb-3 mt-3 ' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary mb-4 mt-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

<%= render "dolists/footer" %>

</body>
</html>